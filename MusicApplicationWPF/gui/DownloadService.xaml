<Window x:Class="MusicApplicationWPF.gui.DownloadService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicApplicationWPF.gui"
        mc:Ignorable="d"
        Title="DownloadService" Height="150" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="263*"/>
            <ColumnDefinition Width="129*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="URL:" FontSize="20" Grid.Column="0" Padding="5,2.3,5,5" Margin="10,10,0,10"></Label>
            <TextBox x:Name="urlBox" FontSize="16" Grid.Column="1" Margin="0,15,3,16" ></TextBox>
        </Grid>
        <Button x:Name="button" Content="Download" Grid.Row="1" FontSize="18" Click="clickDownload" Margin="150,10,21.293,10"></Button>
    </Grid>
</Window>
