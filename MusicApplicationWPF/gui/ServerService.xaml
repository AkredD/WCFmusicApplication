<Window x:Class="MusicApplicationWPF.gui.ServerService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicApplicationWPF.gui"
        mc:Ignorable="d"
        Title="ServerService" Height="100" Width="200" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Port:" FontSize="20" Grid.Column="0" Padding="5,2.3,5,5" Margin="5,0,0,0"></Label>
            <TextBox x:Name="portBox" FontSize="16" Grid.Column="1" Margin="0,5,1,5" ></TextBox>
        </Grid>
        <Button x:Name="button" Content="Start" Grid.Row="1" FontSize="18" Click="clickServer" Margin="60,2"></Button>
    </Grid>
</Window>
